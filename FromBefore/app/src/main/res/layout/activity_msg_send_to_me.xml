<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bgimage_bgpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".message.MsgSendToMeActivity">

    <FrameLayout
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_back"
            android:background="@android:color/transparent"
            android:src="@drawable/button_back38"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/ddaySpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textview_bgpaper" />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/button_down" />
        </FrameLayout>
        <TextView
            android:text="남은 나에게"
            android:textSize="20sp"
            android:textColor="#383838"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notoserifkr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/msgEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_bgpaper"
            android:fontFamily="@font/notoserifkr_bold"
            android:hint="일이 남은 지금\n나는 어떤 마음일까요?\n그리고 어떤 말을 듣고 싶을까요?"
            android:textColorHint="#8f8f8f"
            android:gravity="top"
            android:maxLength="100"
            android:padding="30dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/msgWordCnt"
            android:fontFamily="@font/notoserifkr_bold"
            android:text="0/100"
            android:textSize="12sp"
            android:textColor="#525252"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_send_msg_server"
        android:text="응원의 편지 보내기"
        android:textColor="@android:color/white"
        android:fontFamily="@font/termina_bold"
        android:textSize="15sp"
        android:background="#383838"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
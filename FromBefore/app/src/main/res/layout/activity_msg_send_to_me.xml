<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MsgSendToMeActivity">

    <FrameLayout
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_back"
            android:background="@android:color/transparent"
            android:src="@drawable/button_back"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/ddaySpinner"
            android:spinnerMode="dropdown"
            android:paddingLeft="10dp"
            android:background="@drawable/spinner_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="남은 나에게"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/termina_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/msgEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/message_block"
            android:fontFamily="@font/termina_bold"
            android:gravity="top"
            android:maxLength="100"
            android:padding="30dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/msgWordCnt"
            android:fontFamily="@font/termina_medium"
            android:text="0/100"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_send_msg_server"
        android:text="미래의 나에게"
        android:textColor="@android:color/white"
        android:fontFamily="@font/termina_bold"
        android:textSize="15sp"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bgimage_bgpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitDdayActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoserifkr_bold"
                android:text="저는"
                android:textColor="#000000"
                android:textSize="20sp" />
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ddayBtn"
                    android:background="@drawable/textview_bgpaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/notoserifkr_black" />
                <TextView
                    android:id="@+id/ddayTextView"
                    android:text="N일"
                    android:textColor="#383838"
                    android:textSize="25sp"
                    android:fontFamily="@font/notoserifkr_black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/button_down" />
            </FrameLayout>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoserifkr_bold"
                android:text="동안"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/subject_spinner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/textview_bgpaper" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/button_down" />
            </FrameLayout>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoserifkr_bold"
                android:text="을 목표로"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/textview_bgpaper"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sun"
                android:text="일"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_mon"
                android:text="월"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_tue"
                android:text="화"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_wed"
                android:text="수"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_thr"
                android:text="목"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_fri"
                android:text="금"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_sat"
                android:text="토"
                android:textSize="20sp"
                android:textColor="#999999"
                android:fontFamily="@font/notoserifkr_bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:text="초심을 잃지 않고\n나를 위해 공부하고 싶어요"
            android:textColor="#383838"
            android:textSize="20sp"
            android:fontFamily="@font/notoserifkr_bold"
            android:lineHeight="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/nextBtn"
        android:background="#383838"
        android:layout_gravity="bottom"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="다음"
        android:textSize="16sp"
        android:textColor="#F4F4F4" />

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- DatePicker Dialog theme-->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="fontFamily">@font/termina_bold</item>
        <item name="colorAccent">#000000</item>                   <!--header background-->
<!--                <item name="android:windowBackground">#000000</item>     &lt;!&ndash;calendar background&ndash;&gt;-->
                <item name="android:colorControlActivated">#999999</item> <!--selected day-->
                <item name="android:textColorPrimary">#000000</item> <!--days of the month-->
                <item name="android:textColorSecondary">#000000</item>    <!--days of the week-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
